    <div class = "message">
      <div class = "name_date">
        <div class = "name">
          <%= message.user.name%>
        </div>
        <div class = "date">
          <%= l message.created_at %>
        </div>
      </div>
      <div class = "text">
        <%= message.content %>
       <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
      </div>
    </div>
